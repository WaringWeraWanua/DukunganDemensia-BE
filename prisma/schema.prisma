// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CARE_GIVER
  PATIENT
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username    String @unique
  email       String @unique
  name        String
  password    String
  phoneNumber String
  role        Role   @default(CARE_GIVER)

  CareRelation CareRelation? @relation(name: "careGiver")
  PatientRelation CareRelation? @relation(name: "patient")

  location Location?
}

model Location {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  latitude  Float
  longitude Float

  patientId String @unique
  Patient   User   @relation(fields: [patientId], references: [id])
}

model CareRelation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  careGiver   User   @relation(name: "careGiver", fields: [careGiverId], references: [id])
  careGiverId String @unique

  patient   User   @relation(name: "patient", fields: [patientId], references: [id])
  patientId String @unique

  events Event[]
}

model News {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title    String
  content  String
  imageUrl String
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title          String
  description    String
  startTime      DateTime
  endTime        DateTime
  startNotifTime DateTime

  proofImageUrl String?
  doneTime      DateTime?

  careRelationId String
  CareRelation   CareRelation @relation(fields: [careRelationId], references: [id])
}
